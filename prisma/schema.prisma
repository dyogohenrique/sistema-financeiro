generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TipoTransacao {
  ENTRADA
  SAIDA
  TRANSFERENCIA
}

enum TipoConta {
  CORRENTE
  POUPANCA
  INVESTIMENTO
  SALARIO
}

enum StatusTransacao {
  PENDENTE
  PAGO
  CANCELADO
}

model Conta {
  id                      Int        @id @default(autoincrement())
  name                    String
  tipo                    TipoConta
  saldoCentavos           BigInt     @default(0)
  cor                     String     @default("#3B82F6")
  ativa                   Boolean    @default(true)
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt()

  transacoes              Transacao[] @relation("ContaOrigem")
  transferenciasRecebidas Transacao[] @relation("ContaDestino")
}

model Transacao {
  id             Int        @id @default(autoincrement())
  tipo           TipoTransacao
  valorCentavos  BigInt
  data           DateTime?
  descricao      String?
  envolvido      String?
  status         StatusTransacao
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt()

  contaOrigemId  Int
  contaOrigem    Conta        @relation("ContaOrigem", fields: [contaOrigemId], references: [id])

  contaDestinoId Int?
  contaDestino   Conta?        @relation("ContaDestino", fields: [contaDestinoId], references: [id])

  categorias     TransacaoCategoria[]

  @@index([data])
}

model Categoria {
  id         Int        @id @default(autoincrement())
  name       String
  color      String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt()

  transacoes TransacaoCategoria[]
}

model TransacaoCategoria {
  id           Int       @id @default(autoincrement())
  transacaoId  Int
  categoriaId  Int
  createdAt    DateTime  @default(now())

  transacao    Transacao @relation(fields: [transacaoId], references: [id], onDelete: Cascade)
  categoria    Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@unique([transacaoId, categoriaId])
}
